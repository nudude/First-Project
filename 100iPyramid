def trinum(n):


    num = 1


    k = 2*n - 2


    for i in range(0, n):


        for j in range(0, k):
            print(end=" ")


        k = k - 1


        for j in range(0, i+1):


            print(num, end=" ")


            if num == 100:
              break
            num = num + 1


        print("\r")

n = 14
trinum(n) 
